<!DOCTYPE html>
<html lang="en">
{{>unique}}
<head>
    <title>Weather - {{title}}</title>
</head>
<body>
    <main>
        <section>
            <div class="top-bar"></div>
            
                <img src="./images/weather.png" id="logo">
                <h1>Overcast</h1>
                <h2>city, state</h2>
            <div class="content">
                <div class="info">
                    <div class="wind">
                        <p class = "label">Wind</p>
                        <p id="wind">TBD</p>
                    </div>
                    <div class="temp">
                        <p class = "label">Temperature</p>
                        <p id="temp">TBD</p>
                    </div>
                    <div class="precipitation">
                        <p class = "label">Precipitation</p>
                        <p id="precipitation">TBD</p>
                    </div>
                </div>
                <form action="">
                    <input type="search" name="search" id="search" placeholder="Enter a adress">
                </form>
                
            </div>
        </section>
    </main>
    <script src="./js/app.js"></script>
